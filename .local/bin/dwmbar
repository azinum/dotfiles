#!/bin/bash

delim="|"

bar_status() {
	echo "$delim"

	keylayout && echo "$delim"

	free -h | awk '/^Mem:/ {print $3 "/" $2}' && echo "ðŸ’¾ $delim"

	ps axch -o cmd:15,%mem --sort=-%mem | head -1 | tr -s ' ' && echo "% $delim"

	mullvad status 2>/dev/null | grep -q 'Connected'  && echo "ðŸ”’ $delim"

	mullvad status 2>/dev/null | grep -q 'Connecting' && echo "Connecting... â³ $delim"

	sed "s/down/ðŸŒŽâŒ/;s/up/ðŸŒŽ/" /sys/class/net/e*/operstate 2>/dev/null && echo "$delim"

	volume 2>/dev/null && echo " $delim"

	sed "s/Full/âœ”ï¸/; s/Discharging/ðŸ”‹/; s/Charging/ðŸ”Œ/;" /sys/class/power_supply/BAT0/status 2> /dev/null && cat /sys/class/power_supply/BAT0/capacity && echo "%" && echo "$delim"

	date '+%a %d %b %Y %H:%M:%S'
}

while :; do
	xsetroot -name "$(bar_status | tr '\n' ' ')"
	sleep 1
done
