
super + space
	togglelayout; \
	kill -36 $(pidof dwmblocks);

super + F1
	backlight down

super + F2
	backlight up

super + F12
	stat-volctrl up 5; \
	kill -35 $(pidof dwmblocks); \
	bing bell;

super + F11
	stat-volctrl down 5; \
	kill -35 $(pidof dwmblocks); \
	bing bell;

super + F10
	stat-volctrl toggle; \
	kill -35 $(pidof dwmblocks);

super + F4
	mkdir -p ~/Pictures/Screenshots; \
	scrot -e 'mv $f ~/Pictures/Screenshots/'
